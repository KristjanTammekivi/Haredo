{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug file",
            "args": ["${relativeFile}"],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register"
            ],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--compilers",
                "ts:ts-node/register",
                "--watch",
                "--watch-extensions",
                ".ts",
                "${workspaceRoot}/test/**/*.test.ts"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector"
        }
    ]
}