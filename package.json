{
  "name": "haredo",
  "version": "2.11.0",
  "description": "A type-safe client library for rabbitmq/amqp",
  "homepage": "https://haredo.io",
  "keywords": [
    "rabbit",
    "rabbitmq",
    "amqp",
    "client",
    "typescript"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && npm run build:ts",
    "lint": "eslint --ext .ts src",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "test": "mocha 'src/**/*.test.ts'",
    "test:watch": "mocha 'src/**/*.test.ts' --watch",
    "coverage": "nyc npm run test",
    "rabbitmq:start": "docker-compose -f docker/docker-compose.yml up",
    "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && yarn version --major && git push && git push --tags",
    "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && yarn version --minor && git push && git push --tags",
    "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'updated CHANGELOG.md' && yarn version --patch && git push && git push --tags",
    "generate-docs": "typedoc --out docs src/index.ts"
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "test/**/*.test.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "author": "Kristjan Tammekivi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KristjanTammekivi/haredo.git"
  },
  "dependencies": {
    "@cloudamqp/amqp-client": "^3.0.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@types/dotenv": "^8.2.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "^20.4.5",
    "@types/sinon": "^10.0.0",
    "@types/wtfnode": "^0.7.0",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.46.0",
    "eslint-config-hein": "^1.0.3",
    "hein": "^1.3.5",
    "hein-plugin-sinon": "^1.1.1",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "rabbitmq-admin": "^1.2.3",
    "rimraf": "^5.0.1",
    "sinon": "^17.0.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^10.8.0",
    "typescript": "^5.1.6",
    "wtfnode": "^0.9.1"
  },
  "resolutions": {
    "**/prettier": "npm:@staycool/prettier@^3.0.1"
  }
}
